
@{
    ViewBag.Title = "InsertData";
}

<h2>InsertData</h2>
<form id="stdForm">
    <div class="container">
        <div class="row">
            <div class="col-sm-4"></div>

            <div class="col-sm-4" style="border:5px solid yellowgreen;padding:10px">
                Name
                <input type="text" id="txtName" class="form-control" name="Name" />
                Age
                <input type="text" id="txtAge" class="form-control" name="Age" />
                <br />
                <button class="btn btn-success" id="btnSave" type="button">Save</button>
            </div>
            <div class="col-sm-4"></div>


        </div>
    </div>
</form>

@Scripts.Render("~/bundles/jquery")
<script>
    $(document).ready(function () {
        $("#btnSave").click(function () {
            // calling of method by using ajax
            $.ajax({
                type: "POST",
                url: "/Student/InsertData",
                data: $("#stdForm").serialize()
            })
                .done(function (response) {
                    alert("Data Saved Successfully");
                    window.location.replace("AllStudents")
                })
                .fail(function () {
                    alert("Something went wrong");
                })
        })
    })
</script>
